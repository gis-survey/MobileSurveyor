<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meyersj.mobilesurveyor.app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Transit Surveyor"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".menu.SplashActivity"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".short_survey.scans.ScannerActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.meyersj.mobilesurveyor.app.SCANNER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".short_survey.stops.MapActivity"
            android:hardwareAccelerated="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <intent-filter>
                <action android:name="com.meyersj.mobilesurveyor.app.ONOFFMAP" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".menu.SettingsActivity" >
            <intent-filter>
                <action android:name="com.meyersj.mobilesurveyor.app.SETTINGS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name=".short_survey.scans.LocationService"
            android:exported="false" />

        <activity
            android:name=".long_survey.SurveyActivity"
            android:label="@string/app_name" >

            <intent-filter >
                <action android:name="com.meyersj.mobilesurveyor.app.ODK_SURVEY" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>
    </application>

</manifest>
